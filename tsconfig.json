{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "@playwright/test"],
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["tests", "pages", "utils", "playwright.config.ts"]
}
