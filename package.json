{
  "name": "swaglabs-thesis",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "report:open": "playwright show-report",
    "allure:gen": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "format": "prettier --write .",
    "lint:format": "prettier --check .",
    "lint": "eslint pages tests utils --ext .ts,.tsx,.js",
    "lint:fix": "eslint pages tests utils --ext .ts,.tsx,.js --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.15.0",
    "eslint": "^9.38.0",
    "eslint-plugin-playwright": "^2.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.4.0"
  }
}
